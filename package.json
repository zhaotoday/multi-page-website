{
  "name": "my-site",
  "version": "1.0.0",
  "description": "my site",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "eslintfix": "eslint src/scripts --fix",
    "eslint": "eslint src/scripts",
    "stylelint": "stylelint src/**/*.scss",
    "clean": "rimraf dist",
    "start": "better-npm-run start",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "start": {
      "command": "webpack-dev-server --config build --hot --inline --progress --colors",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "npm run clean && webpack -p --config build --define process.env.NODE_ENV='\"production\"' --progress --profile --colors",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [
    "site"
  ],
  "author": "zhaojintian",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "better-npm-run": "0.0.13",
    "css-loader": "^0.26.1",
    "cssnano": "^3.8.1",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.7.1",
    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html": "^1.0.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "node-sass": "^3.13.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-font-magician": "^1.5.0",
    "postcss-loader": "^1.1.1",
    "postcss-reporter": "^2.0.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "compass-mixins": "^0.12.10"
  }
}
